<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<description>
		Templates for external configuration files used by the SPF
		portlet framework.
	</description>
	<inceptionYear>April 2009</inceptionYear>
	<parent>
		<groupId>com.hp.it.spf.portlet</groupId>
		<artifactId>spf-portlet-parent</artifactId>
		<version>1.2.1-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hp.it.spf.xa</groupId>
	<artifactId>spf-portlet-config</artifactId>
	<packaging>jar</packaging>
	<name>SPF portlet configuration templates</name>
	<ciManagement>
		<system>Hudson</system>
		<url>
			http://samson.atl.hp.com:8080/hudson/job/spf-portlet-config
		</url>
	</ciManagement>
	<scm>
		<connection>scm:svn:https://samson.atl.hp.com/svn/spf/source/trunk/portlet/spf-portlet-config</connection>
		<developerConnection>scm:svn:https://samson.atl.hp.com/svn/spf/source/trunk/portlet/spf-portlet-config</developerConnection>
		<url>https://samson.atl.hp.com/svn/spf/source/trunk/portlet/spf-portlet-config</url>
	</scm>
	<organization>
		<name>Shared Portal Framework: TSG IT</name>
	</organization>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-dependencies</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<excludeTransitive>true</excludeTransitive>
							<includes>META-INF/config/*</includes>
							<outputDirectory>
								${project.build.directory}/stage/
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>${project.build.directory}/stage/META-INF/config</directory>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.hp.it.spf.xa</groupId>
			<artifactId>spf-common-utilities</artifactId>
			<version>${spf.common.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.it.spf.xa</groupId>
			<artifactId>spf-portlet-utilities</artifactId>
			<version>${version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.it.spf.xa</groupId>
			<artifactId>spf-common-hpp</artifactId>
			<version>${spf.common.version}</version>
		</dependency>
	</dependencies>
</project>