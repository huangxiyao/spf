<!DOCTYPE weblogic-web-app
   PUBLIC "-//BEA Systems, Inc.//DTD Web Application 8.1//EN"
   "http://www.bea.com/servers/wls810/dtd/weblogic810-web-jar.dtd">

<weblogic-web-app>
	<context-root>spp-portal-login-portlet</context-root>
	<!--
	   this checks updates of the classes loaded by servlets from WEB-INF/lib - even in production mode
	   see: http://jroller.com/page/ee/20040608#a_simple_optimization_for_weblogic
	-->
	<container-descriptor>
	   <servlet-reload-check-secs>-1</servlet-reload-check-secs>
	</container-descriptor>
</weblogic-web-app>