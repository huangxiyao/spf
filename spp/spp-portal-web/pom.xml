<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>com.hp.spp</groupId>
		<version>4.9.4-SNAPSHOT</version>
		<artifactId>spp</artifactId>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hp.spp</groupId>
	<artifactId>spp-portal-web</artifactId>
	<packaging>war</packaging>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>jmock</groupId>
			<artifactId>jmock</artifactId>
			<version>1.0.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.3</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>axis</groupId>
			<artifactId>axis</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>axis</groupId>
			<artifactId>axis-saaj</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.xml</groupId>
			<artifactId>jaxrpc-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>vgn-portal-core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>vgn-portal-base</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>vgn-portal-linking</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>webinf-classes</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>vgn-portal-rsm</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>vgn-portal-segtrans</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>vgn-wsrp-toolkit</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.sf</groupId>
			<artifactId>ant-contrib</artifactId>
			<scope>provided</scope>
		</dependency>
		<!-- This module does not depend directly on spp-common. It is included explicitly here
		to exclude HIBERNATE dependency -->
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-common</artifactId>
			<version>${spp.version}</version>
			<exclusions>
				<!-- Hibernate is not used in spp-portal-web. In addition it comes with tons of dependencies that are not used either -->
				<exclusion>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate</artifactId>
				</exclusion>
				<!-- Not used in Vignette -->
				<exclusion>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
				</exclusion>
				<!-- Not used in Vignette -->
				<exclusion>
					<groupId>xml-apis</groupId>
					<artifactId>xml-apis</artifactId>
				</exclusion>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>commons-lang</groupId>
					<artifactId>commons-lang</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-portal-common</artifactId>
			<version>${spp.version}</version>
			<exclusions>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-portal-wsmanager</artifactId>
			<version>${spp.version}</version>
			<exclusions>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-profile</artifactId>
			<version>${spp.version}</version>
			<exclusions>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-portal-login</artifactId>
			<version>${spp.version}</version>
			<exclusions>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-portal-search</artifactId>
			<version>${spp.version}</version>
			<exclusions>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>javax.servlet</groupId>
					<artifactId>jstl</artifactId>
				</exclusion>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>taglibs</groupId>
					<artifactId>standard</artifactId>
				</exclusion>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-wsrp-common</artifactId>
			<version>${spp.version}</version>
			<exclusions>
				<!-- WSRP producer specific lib - not used in Vignette -->
				<exclusion>
					<groupId>org.apache.portals.bridges</groupId>
					<artifactId>portals-bridges-portletfilter</artifactId>
				</exclusion>
				<!-- WSRP producer specific lib - not used in Vignette -->
				<exclusion>
					<groupId>com.hp.frameworks.wpa.wsrp4j</groupId>
					<artifactId>wpa-wsrp4j</artifactId>
				</exclusion>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-ldap-login</artifactId>
			<version>${spp.version}</version>
			<type>war</type>
			<exclusions>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
				<!-- Conflicts with Vignette-provided jar -->
				<exclusion>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
	<build>
		<finalName>spp-portal-web</finalName>
		<filters>
			<filter>../filters/${env}.properties</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webResources>
						<resource>
							<directory>${basedir}/src/main/webapp</directory>
							<filtering>true</filtering>
							<includes>
								<include>**/*.xml</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<tasks>
								<taskdef
										resource="net/sf/antcontrib/antcontrib.properties"
										classpathref="maven.compile.classpath"/>
								<ant inheritRefs="true">
									<property name="target.dir"
											  value="${project.build.directory}"/>
									<property name="project.name"
											  value="${project.build.finalName}"/>
								</ant>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>