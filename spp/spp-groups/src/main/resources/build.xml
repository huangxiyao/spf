<?xml version="1.0"?>

<!-- ===================================================================

Ant build file for Castor data binding example programs.

This is a build file for use with the Ant build tool.  See
http://jakarta.apache.org/ant/index.html for more info.  This build.xml
file has been tested with ant version 1.3.

=================================================================== -->

<project name="Group_core" default="schemaexport" basedir=".">

  <!-- The directories -->
  <property name="app.schema.path" value="${basedir}" />
  <property name="hibconf4ant" value="./src/hibernate.cfg.ant.xml" />
	
  <path id="classpath">
	<fileset dir="../SPPSharedLib/lib/" >
	<include name="**/*.jar" />
	</fileset >
	<fileset dir="../tmpLib" >
		<include name="**/*.jar" />
	</fileset >
	<pathelement path="./src"/>
  </path>


  <target name="schemaexport">
	<echo message="making sql script from hibernate-mapping..." />
	 <taskdef name="schemaexport" classname="org.hibernate.tool.hbm2ddl.SchemaExportTask" classpathref="classpath"/>
	 <schemaexport config="${hibconf4ant}" quiet="no" text="yes" drop="no" delimiter=";" output="${app.schema.path}/SPP_Group_Schema.sql" />
	<echo message="db script done (SQL script available in `${app.schema.path}')." />
  </target>
	
</project>
