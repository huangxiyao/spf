<!DOCTYPE databases PUBLIC 
  "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
  "http://castor.exolab.org/mapping.dtd">

<mapping>
	<class name="com.hp.spp.groups.Site">
		<map-to xml="Site"/>
		<field name="Name">
			<bind-xml node="attribute"/>
		</field>
		<field name="GroupList" type="com.hp.spp.groups.Group" collection="set">
			<bind-xml name="Group"/>
		</field>
	</class>
	
	<class name="com.hp.spp.groups.Group">
		<map-to xml="Group"/>
		<field name="Name">
			<bind-xml node="attribute"/>
		</field>
		<field name="Expression"/>
	</class>

	<class name="com.hp.spp.groups.expression.Conjunction">
		<map-to xml="And"/>
		<field name="Expressions" type="com.hp.spp.groups.expression.Expression" collection="arraylist"/>
	</class>

	<class name="com.hp.spp.groups.expression.Disjunction">
		<map-to xml="Or"/>
		<field name="Expressions" type="com.hp.spp.groups.expression.Expression" collection="arraylist"/>
	</class>

	<class name="com.hp.spp.groups.expression.Negation">
		<map-to xml="Not"/>
		<field name="Expression"/>
	</class>

	<class name="com.hp.spp.groups.expression.InGroup">
		<map-to xml="InGroup"/>
		<field name="Value">
			<bind-xml node="attribute" name="value"/>
		</field>
	</class>

	<class name="com.hp.spp.groups.expression.Equality">
		<map-to xml="Equals"/>
		<field name="AttributeName">
			<bind-xml node="attribute" name="attribute"/>
		</field>
		<field name="AttributeValue">
			<bind-xml node="text"/>
		</field>
	</class>

</mapping>