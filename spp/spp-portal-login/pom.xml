<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>com.hp.spp</groupId>
		<version>4.9.4-SNAPSHOT</version>
		<artifactId>spp</artifactId>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hp.spp</groupId>
	<artifactId>spp-portal-login</artifactId>
	<packaging>jar</packaging>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.3</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-common</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-db</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-cache</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-portal-common</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-wsrp-common</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-portal-wsmanager</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-profile</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-portal-simulate</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.spp</groupId>
			<artifactId>spp-portal-crypto</artifactId>
			<version>${spp.version}</version>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>vgn-portal-core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>vignette</groupId>
			<artifactId>vgn-portal-linking</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.bea</groupId>
			<artifactId>weblogic</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>
  <build>
    		<finalName>spp-portal-login</finalName>
     		<filters>
    			<filter>../filters/${env}.properties</filter>
    		</filters>
    		<resources>
    			<resource>
    				<directory>src/main/resources</directory>
    				<filtering>true</filtering>
    			</resource>
    		</resources>
  </build>
  
  <reporting>
    <plugins>
        <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <configuration>
          <configLocation>${basedir}/../CheckstyleHPSPP.xml</configLocation>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

</project>
