<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>spp</artifactId>
		<groupId>com.hp.spp</groupId>
		<version>4.9.4-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hp.spp</groupId>
	<artifactId>spp-vignette-config</artifactId>
	<version>${spp.version}</version>
	<build>
		<finalName>spp-vignette-config</finalName>
		<filters>
    			<filter>../filters/${env}.properties</filter>
    		</filters>
    		<resources>
    			<resource>
    				<directory>src/main/resources</directory>
    				<filtering>true</filtering>
    			</resource>
    		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<tasks>
								<zip destfile="${project.build.directory}/spp_vignette_config.zip" 
									basedir="${project.build.directory}/classes"/>
								<tar destfile="${project.build.directory}/spp_vignette_config.tar" 
									basedir="${project.build.directory}/classes"/>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
</project>