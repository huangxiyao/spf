<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hp.it.spp</groupId>
	<version>4.9.4-SNAPSHOT</version>
	<artifactId>spp</artifactId>
	<packaging>pom</packaging>
	<name>Shared Portal Platform (SPP) - environment: ${env}</name>
	<modules>
		<module>spp-profile</module>
		<module>spp-db</module>
		<module>spp-cache</module>
		<module>spp-config</module>
		<module>spp-common</module>
		<module>spp-groups</module>
		<module>spp-reports</module>
		<module>spp-eservices</module>
		<module>spp-wsrp-common</module>
		<module>spp-wsclient</module>
		<module>spp-ldap-login</module>
		<module>wsrp4j-producer</module>
		<module>spp-services-web</module>
		<module>spp-portal-crypto</module>
		<module>spp-portal-simulate</module>
		<module>spp-portal-common</module>
		<module>spp-hpputils</module>
		<module>spp-portal-wsmanager</module>
		<module>spp-portal-login</module>
		<module>spp-portal-reports</module>
		<module>spp-portal-search</module>
		<module>spp-portal-web</module>
		<module>spp-portal-login-portlet</module>
		<module>spp-vignette-config</module>
		<module>sites</module>
		<module>spp-downtime-web</module>
	</modules>
	<pluginRepositories>
		<pluginRepository>
			<id>Maven</id>
			<name>Maven Repository</name>
			<url>http://repo1.maven.org/maven2</url>
		</pluginRepository>
	</pluginRepositories>
	<distributionManagement>
		<snapshotRepository>
			<id>snapshot</id>
			<name>Internal Snapshots</name>
			<url>${distributeSnapshotUrl}</url>
		</snapshotRepository>
		<repository>
			<id>release</id>
			<name>Internal Releases</name>
			<url>${distributeReleaseUrl}</url>
		</repository>
	</distributionManagement>
	<ciManagement>
		<system>Hudson</system>
	</ciManagement>
	
	<scm>
		<connection></connection>
	</scm>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
			
        <distributeSnapshotUrl>http://repo1.corp.hp.com/nexus/content/repositories/snapshots</distributeSnapshotUrl>
        <distributeReleaseUrl>http://repo1.corp.hp.com/nexus/content/repositories/releases</distributeReleaseUrl>
        
		<spp.version>4.9.4-SNAPSHOT</spp.version>
		<env>DEV</env>
        
        <weblogicVersion>9.2.1.0</weblogicVersion>
        <vignetteVersion>7.4.2</vignetteVersion>
        <antVersion>1.0b3</antVersion>
        
        <axisVersion>1.4</axisVersion>
	</properties>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.bea</groupId>
				<artifactId>weblogic</artifactId>
				<version>${weblogicVersion}</version>
			</dependency>
			<dependency>
				<groupId>net.sf</groupId>
				<artifactId>ant-contrib</artifactId>
				<version>${antVersion}</version>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>vgn-portal-linking</artifactId>
				<version>${vignetteVersion}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>vgn-portal-cache</artifactId>
				<version>${vignetteVersion}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>vgn-portal-base</artifactId>
				<version>${vignetteVersion}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>vgn-wsrp-toolkit</artifactId>
				<version>${vignetteVersion}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>vgn-portal-segtrans</artifactId>
				<version>7.4</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>vgn-portal-core</artifactId>
				<version>${vignetteVersion}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>vgn-jsr-container-taglib</artifactId>
				<version>${vignetteVersion}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>axis</groupId>
				<artifactId>axis</artifactId>
				<version>${axisVersion}</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>axis</groupId>
				<artifactId>axis-saaj</artifactId>
				<version>${axisVersion}</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>commons-discovery</groupId>
				<artifactId>commons-discovery</artifactId>
				<version>0.2</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>javax.xml</groupId>
				<artifactId>jaxrpc-api</artifactId>
				<version>1.1</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>1.2.14</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>commons-lang</groupId>
				<artifactId>commons-lang</artifactId>
				<version>2.3</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>vgn-portal-rsm</artifactId>
				<version>7.4</version>
			</dependency>
			<dependency>
				<groupId>vignette</groupId>
				<artifactId>webinf-classes</artifactId>
				<version>7.4.2</version>
				<type>jar</type>
				<scope>compile</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
