<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <groupId>com.hp.spp</groupId>
		<version>4.9.4-SNAPSHOT</version>
      <artifactId>spp</artifactId>
   </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.hp.frameworks.wpa.wsrp4j</groupId>
  <artifactId>wsrp4j-producer</artifactId>
  <packaging>war</packaging>
  <version>1.1.5</version>
  <name>WSRP4J Producer</name>
  <dependencies>
	  <dependency>
		  <groupId>junit</groupId>
		  <artifactId>junit</artifactId>
		  <version>3.8.1</version>
		  <scope>test</scope>
	  </dependency>
	  <dependency>
		  <groupId>com.hp.frameworks.wpa.wsrp4j</groupId>
		  <artifactId>wpa-wsrp4j</artifactId>
		  <version>1.1.5</version>
	  </dependency>
	  <dependency>
		  <groupId>com.hp.spp</groupId>
		  <artifactId>spp-wsrp-common</artifactId>
		  <version>${spp.version}</version>
	  </dependency>
	  <dependency>
		  <groupId>com.hp.spp</groupId>
		  <artifactId>spp-portal-simulate</artifactId>
		  <version>${spp.version}</version>
	  </dependency>
	  <dependency>
		  <groupId>com.hp.spp</groupId>
		  <artifactId>spp-cache</artifactId>
		  <version>${spp.version}</version>
	  </dependency>
  </dependencies>
  <build>
    <finalName>wsrp4j-producer</finalName>
      <plugins>
         <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
               <execution>
                  <phase>package</phase>
                  <configuration>
							<tasks>
								<copy todir="${project.build.directory}/${project.build.finalName}" overwrite="true">
									<fileset dir="src/main/webapp-update" />
								</copy>
								<zip basedir="${project.build.directory}/${project.build.finalName}"
									zipfile="${project.build.directory}/${project.build.finalName}.war" />
							</tasks>
						</configuration>
						<goals>
						  <goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
  </build>
</project>
