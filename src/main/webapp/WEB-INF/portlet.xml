<?xml version="1.0" encoding="UTF-8"?>

<portlet-app
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
	                    http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="1.0">

	<portlet>
		<description>
			Interpolates and displays an HTML file (localized).
		</description>
		<portlet-name>HTMLViewer</portlet-name>
		<display-name>HTMLViewer</display-name>
		<portlet-class>
			com.hp.frameworks.wpa.portlet.WPADispatcherPortlet
		</portlet-class>

		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/context/html_viewer.xml</value>
		</init-param>

		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>

		<supported-locale>en</supported-locale>

		<portlet-info>
			<title>Content</title>
			<short-title>Content</short-title>
			<keywords>content</keywords>
		</portlet-info>

		<portlet-preferences>
			<preference>
				<name>viewFilename</name>
				<read-only>true</read-only>
			</preference>
			<preference>
				<name>launchButtonless</name>
				<read-only>true</read-only>
			</preference>
		</portlet-preferences>
	</portlet>
	<custom-portlet-mode>
		<portlet-mode>config</portlet-mode>
	</custom-portlet-mode>

	<!-- Define the user attributes the portal should provide to 
		the portlet in the P3P USER_INFO map. If you use the 
		generic user-property token in your view file, be sure
		to add the corresponding user attribute here. -->
	<!-- TODO: Check the attributes defined below, and add all 
		the missing ones.  We should define all the user attributes
		here, so portlet developers can use this as a template for
		their portlet.xml. -->
	<user-attribute>
		<description>User's email address</description>
		<name>user.business-info.online.email</name>
	</user-attribute>
	<user-attribute>
		<description>User's first (given) name</description>
		<name>user.name.given</name>
	</user-attribute>
	<user-attribute>
		<description>User's last (family) name</description>
		<name>user.name.family</name>
	</user-attribute>

	<!-- WPAP logging filter and filter mappings -->
	<filter>
		<display-name>WPA Transaction Logging Filter</display-name>
		<filter-name>TransactionLoggingFilter</filter-name>
		<filter-class>
			com.hp.frameworks.wpa.portlet.transaction.TransactionLoggingFilter
		</filter-class>
		<lifecycle>ACTION_PHASE</lifecycle>
		<lifecycle>RENDER_PHASE</lifecycle>
	</filter>
	<filter-mapping>
		<filter-name>TransactionLoggingFilter</filter-name>
		<portlet-name>HTMLViewer</portlet-name>
	</filter-mapping>
</portlet-app>
