<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../dtd/spring-beans.dtd">

<beans>
	<!-- Default View Resolver -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="cache" value="false" />
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
		<property name="contentType">
			<value>text/html; charset=UTF-8</value>
		</property>
	</bean>

	<!-- Exception handling -->
	<bean id="defaultExceptionHandlerTemplate"
		class="com.hp.it.spf.xa.exception.portlet.handler.SimpleMappingExceptionResolver"
		abstract="true">
		<property name="defaultErrorView" value="defaultError" />
		<property name="logResolvedException" value="true" />
	</bean>

	<!-- Message sources -->
	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="cacheSeconds" value="1"></property>
		<property name="basenames">
			<list>
				<value>
					classpath:portlet/i18n/html_viewer_messages
				</value>
			</list>
		</property>
	</bean>

	<!-- WPAP logging interceptor -->
	<bean id="transactionLoggingInterceptor"
		class="com.hp.frameworks.wpa.portlet.handler.TransactionLoggingInterceptor" />
	<bean id="annotationHandlerMapping"
		class="org.springframework.web.portlet.mvc.annotation.DefaultAnnotationHandlerMapping">
		<property name="interceptors">
			<list>
				<ref bean="transactionLoggingInterceptor" />
			</list>
		</property>
	</bean>
</beans>
