<project name="utility-package" default="dist" basedir=".">

	<description>Clean and Distribute</description>

	<target name="init" description="Initialize environment">
		<property name="backup" value="backup"/>

		<property name="username" value="wuyingzh"/>
		<!--
		<property name="path" value="src/main/resources/wsdl/UPSWebServices"/>
		<property name="path" value="src/main/resources/wsdl/UGSRuntimeServiceXfireImpl"/>
		-->
		<property name="path" value="src/main/resources/wsdl/UGSRuntimeServiceXfireImpl"/>
		<property name="wsdl" value="${path}.wsdl"/>
		<property name="package" value="com.hp.it.spf.user.group.stub"/>
		<property name="packagepath" value="com/hp/it/spf/user/group/stub"/>		

		<property name="src" value="src/main/java"/>
		
	</target>

	<target name="backup" depends="init" description="Back up">

	</target>
	
	<target name="clean" depends="backup" description="Clean up">
		<delete dir="src/main/java/${packagepath}"/>
		<mkdir dir="src/main/java/${packagepath}"/>
	</target>	

	
	<target name="axis" depends="clean" description="Modify generated files">
		<java classname="org.apache.axis.wsdl.WSDL2Java">
			<classpath>
				<fileset dir="C:/Documents and Settings/${username}/.m2/repository">
					<include name="axis/axis/1.3/axis-1.3.jar" />
					<include name="commons-discovery/commons-discovery/0.2/commons-discovery-0.2.jar" />
					<include name="commons-logging/commons-logging/1.1.1/commons-logging-1.1.1.jar" />
					<include name="xerces/xercesImpl/2.8.1/xercesImpl-2.8.1.jar" />
					<include name="log4j/log4j/1.2.14/log4j-1.2.14.jar" />
					<include name="xml-apis/xml-apis/1.3.02/xml-apis-1.3.02.jar" />
					<include name="axis/axis-saaj/1.3/axis-saaj-1.3.jar" />
					<include name="axis/axis-jaxrpc/1.3/axis-jaxrpc-1.3.jar" />
					<include name="wsdl4j/wsdl4j/1.5.1/wsdl4j-1.5.1.jar" />
				</fileset>
			</classpath>
			<arg line=' -s "${wsdl}" -p ${package} -o "${src}"'/>
		</java>
	</target>

	<target name="dist" depends="axis" description="Generate the component">
	</target>
	
</project>
