<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.hp.it.spf.portlet</groupId>
		<artifactId>spf-portlet-parent</artifactId>
		<version>2.0.1-SNAPSHOT</version>
		<!-- 
			relativePath to parent is only needed in the aggregator POM to allow build all modules
			including parent, even though the parent's snapshot has not been built yet in the CI
			and is not available in the repository.
		-->
		<relativePath>spf-portlet-parent/pom.xml</relativePath>
	</parent>

    <version>2.0.1-SNAPSHOT</version>
	<groupId>com.hp.it.spf.portlet</groupId>
	<artifactId>portlet</artifactId>
	<packaging>pom</packaging>
	<name>SPF portlet aggregator POM</name>

	<scm>
		<connection>scm:svn:https://samson.atl.hp.com/svn/spf/source/trunk/portlet</connection>
		<developerConnection>scm:svn:https://samson.atl.hp.com/svn/spf/source/trunk/portlet</developerConnection>
		<url>https://samson.atl.hp.com/svn/spf/source/trunk/portlet</url>
	</scm>
	
	<modules>
		<module>spf-portlet-parent</module>
		<module>spf-pc-database-persistence</module>
		<module>spf-portlet-config</module>
		<module>spf-portlet-container</module>
		<module>spf-portlet-filters</module>
		<module>spf-portlet-utilities</module>
		<module>spf-portlet-wsrp</module>
		<module>spf-portletdriver</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-9</version>
				<configuration>
					<autoVersionSubmodules>true</autoVersionSubmodules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>