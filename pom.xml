<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hp.it.spf.openportal</groupId>
	<artifactId>spf-portlet-container</artifactId>
	<version>1.0.1-SNAPSHOT</version>
	<name>spf-portlet-container</name>
	<description>This project provides some spf customized features on OpenPortal portlet container.</description>
	<parent>
		<groupId>com.hp.it.spf.tools</groupId>
		<artifactId>spf-pom</artifactId>
		<version>1.0.1-SNAPSHOT</version>
	</parent>
	<build>
		<resources>
			<resource>
				<targetPath>META-INF</targetPath>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>container</artifactId>
            <version>2.1-r830</version>
            <scope>provided</scope>
        </dependency>
		<dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>portletadmin</artifactId>
            <version>2.1-r830</version>
            <scope>provided</scope>
        </dependency>
		<dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>portletcontainercontext</artifactId>
            <version>2.1-r830</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>pc-database-persistence</artifactId>
            <version>1.0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
        	<groupId>org.eclipse.persistence</groupId>
        	<artifactId>eclipselink</artifactId>
        	<version>1.0.2</version>
        	<scope>provided</scope>
        </dependency>
        <dependency>
        	<groupId>com.hp.it.spf.xa</groupId>
        	<artifactId>spf-common-utilities</artifactId>
        	<version>1.0.1-SNAPSHOT</version>
        	<scope>provided</scope>
        </dependency>
	</dependencies>
	<ciManagement>
		<system>Hudson</system>
		<url>http://samson.atl.hp.com:8080/hudson/view/com.hp.it.spf.xa/job/spf-portlet-container</url>
	</ciManagement>
	<scm>
		<connection>scm:svn:http://samson.atl.hp.com/svn/spf/source/xa/trunk/spf-portlet-container</connection>
		<developerConnection>scm:svn:http://samson.atl.hp.com/svn/spf/source/xa/trunk/spf-portlet-container</developerConnection>
		<url>http://samson.atl.hp.com/svn/spf/source/xa/trunk/spf-portlet-container</url>
	</scm>
