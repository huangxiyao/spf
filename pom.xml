<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.hp.it.spf.tools</groupId>
		<artifactId>spf-pom</artifactId>
		<version>2.1.5-SNAPSHOT</version>
	</parent>

	<groupId>com.hp.it.spf.portal</groupId>
	<artifactId>portal</artifactId>
	<version>2.1.2-SNAPSHOT</version>
	
	<packaging>pom</packaging>
	<name>SPF portal aggregator POM</name>

	<scm>
		<connection>${spf.sourceReadUrl}/trunk/portal</connection>
		<developerConnection>${spf.sourceWriteUrl}/trunk/portal</developerConnection>
		<url>${spf.sourceViewUrl}/trunk/portal</url>
	</scm>

	<distributionManagement>
		<site>
			<id>site</id>
			<name>SPF Common Site</name>
			<url>${siteUrl}/portal/${project.version}</url>
		</site>
	</distributionManagement>
	
	<properties>
		<spf.common.version>2.1.2-SNAPSHOT</spf.common.version>
		<cas.security.version>2.1.1</cas.security.version>
		<spf.portal-helper-apps.version>2.1.1</spf.portal-helper-apps.version>
	</properties>


	<modules>
		<module>spf-maven-car-plugin</module>
		<module>spf-portal</module>
		<module>spf-portal-config</module>
		<module>spf-portal-filters</module>
		<module>spf-portal-session</module>
		<module>spf-portal-tools</module>
		<module>spf-portal-utilities</module>
		<module>spf-portal-wsrp</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-9</version>
				<configuration>
					<autoVersionSubmodules>true</autoVersionSubmodules>
					<preparationGoals>clean install</preparationGoals>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>