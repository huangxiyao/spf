			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>axistools-maven-plugin</artifactId>
				<version>1.3</version>
				<configuration>
					<allElements>true</allElements>
					<noWrapped>true</noWrapped>
					<noImports>true</noImports>
					<sourceDirectory>src/main/resources/wsdl</sourceDirectory>
					<packageSpace>com.hp.it.spf.user.group.stub</packageSpace>					<testSourceDirectory>src/test/java</testSourceDirectory>
					<outputDirectory>src/main/java</outputDirectory>
					<timestampDirectory>target/classes/wsdl</timestampDirectory>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
