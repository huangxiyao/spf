<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hp.it.spf.xa</groupId>
	<artifactId>spf-portlet-utilities</artifactId>
	<packaging>jar</packaging>
	<name>SPF portlet utilities</name>
	<description>
		Utilities for the portlet side of the Shared Portal Framework.
		Currently includes concrete utility classes for portlet file
		content interpolation (useful for any portlet use case involving
		display of an authored HTML file with certain dynamic
		substitutions supported), internationalization (including
		generating localized resource file URLs and getting localized
		message properties with various optional hooks such as
		contextual help), help (including contextual help and a useful
		controller for portlet help mode), etc.
	</description>
	<inceptionYear>December 2008</inceptionYear>
	<parent>
		<groupId>com.hp.it.spf.portlet</groupId>
		<artifactId>portlet</artifactId>
		<version>3.0.11-SNAPSHOT</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc-portlet</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>javax.portlet</groupId>
			<artifactId>portlet-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.hp.it.spf.xa</groupId>
			<artifactId>spf-common-utilities</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>com.hp.frameworks</groupId>
			<artifactId>timber-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hp.frameworks</groupId>
			<artifactId>wpa-portlet-core</artifactId>
		</dependency>
	</dependencies>
</project>
