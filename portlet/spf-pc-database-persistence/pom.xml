<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.sun.portal.portletcontainer</groupId>
	<artifactId>spf-pc-database-persistence</artifactId>
	<packaging>jar</packaging>
	<name>spf-pc-database-persistence</name>
	<description>As the target portlet applications will be deployed in the clustered environment, the producer as well as the underlying portlet container should store their data in a way that is cluster-friendly, e.g. when a portlet preference value is updated this change must be visible on all the servers running this portlet application, but openportal portlet container does not provide a database persistence implementation. This project just provides the database persitence feature with our own implementation.</description>
	<parent>
		<groupId>com.hp.it.spf.portlet</groupId>
		<artifactId>portlet</artifactId>
		<version>3.0.11-SNAPSHOT</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>javax.portlet</groupId>
			<artifactId>portlet-api</artifactId>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.ccpp</groupId>
			<artifactId>ccpp</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sun.portal.portletcontainer</groupId>
			<artifactId>container</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sun.portal.portletcontainer</groupId>
			<artifactId>portlet-container</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sun.portal.portletcontainer</groupId>
			<artifactId>portletadmin</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sun.portal.portletcontainer</groupId>
			<artifactId>portletcontainercontext</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
        	<groupId>org.eclipse.persistence</groupId>
        	<artifactId>javax.persistence</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>eclipselink</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<version>10.6.1.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc14</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <classifier>tomcat</classifier>
                    <descriptors>
                        <descriptor>src/assembly/distribution.xml</descriptor>
                    </descriptors>
                    <archive>
                        <addMavenDescriptor>true</addMavenDescriptor>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>package-tomcat</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
