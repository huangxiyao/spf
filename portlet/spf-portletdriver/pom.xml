<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.hp.it.spf.portlet</groupId>
        <artifactId>portlet</artifactId>
        <version>2.2.13</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.hp.it.spf.apps</groupId>
    <artifactId>spf-portletdriver</artifactId>
    <packaging>war</packaging>
    <name>Modified OpenPortal WSRP Producer</name>
    <description>
        This project creates OpenPortal-based WSRP producer
        including SPF libraries
        and repackaged to work on WebLogic.
    </description>
    <dependencies>
        <dependency>
            <groupId>com.hp.it.spf.com.sun.portal.wsrp</groupId>
            <artifactId>portletdriver</artifactId>
            <version>1.0.1</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.hp.it.spf.wsrp</groupId>
            <artifactId>spf-portlet-wsrp</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>portlet-container</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>portletadmin</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>container</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>portletcontainercontext</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun.portal.wsrp</groupId>
            <artifactId>wsrp-common</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun.portal.wsrp</groupId>
            <artifactId>wsrp-producer</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.mail</groupId>
            <artifactId>mail</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun.portal.portletcontainer</groupId>
            <artifactId>portletdriver</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-fileupload</groupId>
            <artifactId>commons-fileupload</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.3.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.jws</groupId>
            <artifactId>jsr181-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-rt</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.hp.it.spf.openportal</groupId>
            <artifactId>spf-portlet-container</artifactId>
            <version>${project.version}</version>
            <!-- spf-portlet-container is part of the system classpath and therefore 
                the scope is "provided" -->
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <finalName>portletdriver</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webResources>
                        <resource>
                            <directory>src/main/webapp</directory>
                        </resource>
                        <resource>
                            <directory>src/main/webapp-wls103</directory>
                        </resource>
                    </webResources>
                </configuration>
                <executions>
                    <execution>
                        <id>package-wls100</id>
                        <phase>package</phase>
                        <configuration>
                            <classifier>wls100</classifier>
                            <webappDirectory>${project.build.directory}/${project.build.finalName}-wls100</webappDirectory>
                            <webResources>
                                <resource>
                                    <directory>src/main/webapp</directory>
                                </resource>
                                <resource>
                                    <directory>src/main/webapp-wls100</directory>
                                </resource>
                            </webResources>
                        </configuration>
                        <goals>
                            <goal>war</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
