<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<description>Templates for external configuration files used by the SPF
		portal framework.</description>
	<inceptionYear>April 2009</inceptionYear>
	<parent>
		<groupId>com.hp.it.spf.portal</groupId>
		<artifactId>spf-portal-parent</artifactId>
		<version>2.0.1-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hp.it.spf.xa</groupId>
	<artifactId>spf-portal-config</artifactId>
	<packaging>jar</packaging>
	<name>SPF portal configuration templates</name>
	<ciManagement>
		<system>Hudson</system>
		<url>http://samson.atl.hp.com:8080/hudson/job/spf-portal-config-2.0</url>
	</ciManagement>
	<scm>
		<connection>scm:svn:http://samson.atl.hp.com/svn/spf/source/branches/spf-2.0/portal/spf-portal-config</connection>
		<developerConnection>scm:svn:http://samson.atl.hp.com/svn/spf/source/branches/spf-2.0/portal/spf-portal-config</developerConnection>
		<url>http://samson.atl.hp.com/svn/spf/source/branches/spf-2.0/portal/spf-portal-config</url>
	</scm>
	<organization>
		<name>Shared Portal Framework: TSG IT</name>
	</organization>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-dependencies</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<excludeTransitive>true</excludeTransitive>
							<includes>META-INF/config/*,META-INF/config/dev/*,META-INF/config/itft/*,META-INF/config/itg/*,META-INF/config/pro/*,META-INF/config/instance/*,META-INF/config/instance/dev/*,META-INF/config/instance/itft/*,META-INF/config/instance/itg/*,META-INF/config/instance/pro/*</includes>
							<outputDirectory>
								${project.build.directory}/stage/
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>${project.build.directory}/stage/META-INF/config</directory>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.hp.it.spf.xa</groupId>
			<artifactId>spf-common-utilities</artifactId>
			<version>${spf.common.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.it.spf.xa</groupId>
			<artifactId>spf-common-hpp</artifactId>
			<version>${spf.common.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.it.spf.xa</groupId>
			<artifactId>spf-portal-utilities</artifactId>
			<version>${version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.it.spf.xa</groupId>
			<artifactId>spf-portal-filters</artifactId>
			<version>${version}</version>
		</dependency>
		<dependency>
			<groupId>com.hp.it.spf.apps</groupId>
			<artifactId>spf-healthcheck</artifactId>
			<version>${spf.portal-helper-apps.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>com.hp.it.spf.sso</groupId>
			<artifactId>spf-portal-session</artifactId>
			<version>${version}</version>
		</dependency>
	</dependencies>
</project>