<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.hp.it.spf.tools</groupId>
	<artifactId>spf-pom</artifactId>
	<name>Shared Portal Framework super POM</name>
	<version>2.1.2</version>
	<packaging>pom</packaging>

	<description>
		This POM encapsulates all the reporting features of the shared
		portal framework.
	</description>
	<scm>
		<connection>scm:svn:https://code1.corp.hp.com/svn/spf/source/tags/spf-pom-2.1.2</connection>
		<developerConnection>scm:svn:https://code1.corpl.hp.com/svn/spf/source/tags/spf-pom-2.1.2</developerConnection>
		<url>https://code1.corp.hp.com/svn/spf/source/tags/spf-pom-2.1.2</url>
	</scm>
	
	<ciManagement>
	</ciManagement>

	<organization>
		<name>Shared Portal Framework: TSG IT</name>
	</organization>

	<distributionManagement>
		<repository>
			<id>releases</id>
			<name>Internal Releases</name>
			<url>
				http://samson.atl.hp.com:8081/nexus/content/repositories/releases
			</url>
		</repository>

		<snapshotRepository>
			<id>snapshots</id>
			<name>Internal Snapshots</name>
			<url>
				http://samson.atl.hp.com:8081/nexus/content/repositories/snapshots
			</url>
		</snapshotRepository>

		<site>
			<id>cas.sdk</id>
			<name>CAS SDK</name>
			<!--
				<url>scp://samson.atl.hp.com:/var/www/sdk/${project.artifactId}/${project.version}</url>
			-->
			<url>file:/opt/sasuapps/casfw/local/var/${project.artifactId}/${project.version}</url>

		</site>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.hp.it.spf.tools</groupId>
				<artifactId>spf-maven-car-plugin</artifactId>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<autoVersionSubmodules>true</autoVersionSubmodules>
                    <preparationGoals>clean install</preparationGoals>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<docfilessubdirs>true</docfilessubdirs>
					<links>
						<link>
							http://java.sun.com/j2se/1.5.0/docs/api/
						</link>
						<link>
							http://static.springframework.org/spring/docs/2.5.x/api/
						</link>
						<link>
							http://www.bluesunrise.com/portlet-api/
						</link>
						<link>
							http://samson.atl.hp.com:8080/hudson/job/spf-common-utilities/site/apidocs/
						</link>
						<link>
							http://samson.atl.hp.com:8080/hudson/job/spf-portal-utilities/site/apidocs/
						</link>
						<link>
							http://samson.atl.hp.com:8080/hudson/job/spf-portlet-utilities/site/apidocs/
						</link>
					</links>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.2</version>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>1.2</version>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jdepend-maven-plugin</artifactId>
				<version>2.0-beta-2</version>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<targetJdk>1.5</targetJdk>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
</project>
