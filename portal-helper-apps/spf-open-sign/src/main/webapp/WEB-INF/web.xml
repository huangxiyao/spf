<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app 
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">
<!-- $Header: /external/Repo3/SP_FW/open-sign/WebContent/WEB-INF/web.xml,v 1.3 2007/10/29 23:03:30 djorgen Exp $ -->
<web-app>
	<display-name>Open Sign</display-name>
	<description>
		This application is the open sign for the portal. When running,
		the portal is open. When not running, the portal is closed.
		Open-sign is part of the Shared Portal Framework.
	</description>

	<servlet>
		<servlet-name>OpenSign</servlet-name>
		<jsp-file>/jsp/isOpen.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>OpenSign</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>
